<!DOCTYPE html>
<html lang="en">
    <!-- views/pages/index.ejs -->


    <head>
        <%- include ../partials/head %>
    </head>

    
    <body class="container">

        <header>
            <%- include ../partials/header %>
        </header>

        <main>

            <!-- this is the syntax to render to the page -->
            <!-- <% users.forEach(function(user){ %>
