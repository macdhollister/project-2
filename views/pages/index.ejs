<!DOCTYPE html>
<html lang="en">
<!-- views/pages/index.ejs -->


<head>
    <%- include ../partials/head %>
</head>
<script src="https://code.jquery.com/jquery-3.3.1.js" integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
    crossorigin="anonymous"></script>
<script src="js/index.js"></script>

<body class="container">

    <header>
        <%- include ../partials/header %>
    </header>

    <main>

        <!-- this is the syntax to render to the page -->
        
        <!-- <% users.forEach(function(user){ %>
            <li> <%= user.username %> </li>
        <% }); %> -->


        <!-- Search Header -->

        <!-- Searchbar -->
        <div class="level-item searchDiv">
            <div class="field has-addons homeSearch">
                <p class="control is-expanded">
                    <input class="input searchText" type="text" id="skillSearch" placeholder="What would you like to learn?">
                </p>
                <form class="control create-form">
                    <a class="button is-success" type="submit">
                        Search
                    </a>
                </form>
            </div>
        </div>


        <!-- Filter Section -->
        <h2 class="is-size-4 level-item filterText">Filter by:</h2>

        <div class="buttons are-medium level-item">
            <a class="button filterButtons">Type</a>
            <a class="button filterButtons">Level</a>
            <a class="button filterButtons">Shared Interests</a>
        </div>

        <!-- User Container -->
        <section class="section">
            <div class="container">

                <!-- Example User #1 -->
                <% users.forEach(function(user) { %>
                <div class="box is-shadow">
                    <article class="media">
                        <div class="media-left">
                            <figure class="image is-64x64">
                                <img class="is-rounded" src="https://bulma.io/images/placeholders/64x64.png">
                            </figure>
                        </div>
                        <div class="media-content">
                            <div class="content userHeader">
                                <p>
                                    <strong class="userName" id="<%= user.id %>">
                                        <%= user.username %></strong>
                                    <medium class="userEmail">| </medium>
                                    <medium class="userEmail">
                                        <%= user.email %>
                                    </medium>
                                    <medium>
                                        <a>
                                            <span class="icon is-small">
                                                <i class="fas fa-envelope emailContact"></i>
                                            </span>
                                            <span class="button is-small is-rounded is-outlined" data-id="<%= user.id %>">Chat</span>
                                        </a>
                                    </medium>
                                    <br>
                                    <medium class="userInfo">Amateur | Beginner, Advanced</medium>
                                    <br>
                                    <br>
                                    <%= user.description %>
                                    Lorem ipsum dolor sit amet, math math blah blah, consectetur adipiscing elit.
                                    <br>
                                    <br>
                                </p>
                            </div>
                        </div>
                    </article>

                    <!-- Teaching/Learning -->
                    <div class="teaching">
                        <h6 class="is-size-6">Teaching</h6>
                        <div class="buttons are-small">
                            <a class="button">Salsa</a>
                            <a class="button">Math</a>
                            <a class="button">Coding</a>
                            <a class="button">Scuba Diving</a>
                        </div>
                    </div>
                    <br>

                    <div class="learning">
                        <h6 class="is-size-6">Learning:</h6>
                        <div class="buttons are-small">
                            <a class="button">Yoga</a>
                            <a class="button">Embroidery</a>
                            <a class="button">Cycling</a>
                            <a class="button">Cello</a>
                        </div>
                    </div>
                </div>
                <% }); %>
                <!-- End User #1 -->

            </div>
        </section>

    </main>
</body>


<footer>
    <%- include ../partials/footer %>
</footer>

</html>