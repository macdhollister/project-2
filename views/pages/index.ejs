<!DOCTYPE html>
<html lang="en">
    <!-- views/pages/index.ejs -->


<head>
    <%- include ../partials/head %>
</head>

<body class="container">

    <header>
        <%- include ../partials/header %>
    </header>

    <main>


        <!-- Search Header -->

        <!-- Searchbar -->
        <div class="level-item searchDiv">
            <div class="field has-addons homeSearch">
                <p class="control is-expanded">
                    <input class="input searchText" type="text" placeholder="What would you like to learn?">
                </p>
                <p class="control">
                    <a class="button is-success">
                        Search
                    </a>
                </p>
            </div>
        </div>


        <!-- Filter Section -->
        <h2 class="is-size-4 level-item filterText">Filter by:</h2>

        <div class="buttons are-medium level-item">
            <a class="button filterButtons">Type</a>
            <a class="button filterButtons">Level</a>
            <a class="button filterButtons">Shared Interests</a>
        </div>

        <!-- User Container -->
        <section class="section">
            <div class="container">

                <!-- Example User #1 -->
                <div class="box is-shadow">
                    <article class="media">
                        <div class="media-left">
                            <figure class="image is-64x64">
                                <img class="is-rounded" src="https://bulma.io/images/placeholders/64x64.png">
                            </figure>
                        </div>
                        <div class="media-content">
                            <div class="content userHeader">
                                <p>
                                    <strong class="userName">Mac Hollister</strong>
                                    <medium class="userEmail">| </medium>
                                    <medium class="userEmail">coolmathguy@uw.edu</medium>
                                    <medium>
                                        <a>
                                            <span class="icon is-small">
                                                <i class="fas fa-envelope emailContact"></i>
                                            </span>
                                        </a>
                                    </medium>
                                    <br>
                                    <medium class="userInfo">Amateur | Beginner, Advanced</medium>
                                    <br>
                                    <br>
                                    Lorem ipsum dolor sit amet, math math blah blah, consectetur adipiscing elit.
                                    <br>
                                    <br>
                                </p>
                            </div>

                        </div>

                    </article>

                    <!-- Teaching/Learning -->
                    <div class="teaching">
                        <h6 class="is-size-6">Teaches:</h6>
                        <div class="buttons are-small">
                            <a class="button">Salsa</a>
                            <a class="button">Math</a>
                            <a class="button">Coding</a>
                            <a class="button">Scuba Diving</a>
                        </div>
                    </div>
                    <br>
                    <div class="learning">
                        <h6 class="is-size-6">Learning:</h6>
                        <div class="buttons are-small">
                            <a class="button">Yoga</a>
                            <a class="button">Embroidery</a>
                            <a class="button">Cycling</a>
                            <a class="button">Cello</a>
                        </div>
                    </div>

                </div>
                <!-- End User #1 -->

                <!-- Ex. User #2 -->
                <div class="box is-shadow">
                    <article class="media">
                        <div class="media-left">
                            <figure class="image is-64x64">
                                <img class="is-rounded" src="https://bulma.io/images/placeholders/64x64.png">
                            </figure>
                        </div>
                        <div class="media-content">
                            <div class="content userHeader">
                                <p>
                                    <strong class="userName">Candice Cupcake</strong>
                                    <medium class="userEmail">| </medium>
                                    <medium class="userEmail">confectioner@bakery.com</medium>
                                    <medium>
